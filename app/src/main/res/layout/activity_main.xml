<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="100"
    android:gravity="center_horizontal"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/cardview_dark_background"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        >
    <TextView
        android:id="@+id/tv_team_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:padding="20dp"
        android:text="Raptors" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        app:cardBackgroundColor="@color/cardview_dark_background"
       >
    <TextView
        android:id="@+id/tv_team_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="Lakers" />
    </androidx.cardview.widget.CardView>
</LinearLayout>
    <ToggleButton
        android:id="@+id/tb_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:background="@drawable/toggle_selector"
        android:textOff=""
        android:textOn=""/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="100"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            app:cardBackgroundColor="@color/cardview_shadow_start_color"
            >
    <TextView
        android:id="@+id/tv_score_a"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
         />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:layout_marginLeft="10dp"
            app:cardBackgroundColor="@color/cardview_shadow_start_color"
            >
    <TextView
        android:id="@+id/tv_score_b"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
       />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <ImageButton
        android:id="@+id/btn_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:onClick="onClickPlus"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/outline_add_black_20" />

    <ImageButton
        android:id="@+id/btn_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:padding="10dp"
        android:onClick="onClickMinus"
        app:srcCompat="@drawable/outline_remove_black_24" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rg_points"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <RadioButton
            android:id="@+id/rb_one_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 Point"
            android:textSize="30sp"
            android:textColor="@color/black"
             />

        <RadioButton
            android:id="@+id/rb_two_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 Points"
            android:textSize="30sp"
            android:textColor="@color/black"/>

        <RadioButton
            android:id="@+id/rb_three_points"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_height="wrap_content"
            android:text="3 Points" />
    </RadioGroup>



</LinearLayout>